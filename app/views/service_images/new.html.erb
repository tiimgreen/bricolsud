<div class="container settings-container">
  <%= form_for @service_image, html: { class: 'form-horizontal' } do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group">
      <%= f.label :alt_text, 'Caption', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :alt_text, auto_focus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :image, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.file_field :image, rows: 5, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Create', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
