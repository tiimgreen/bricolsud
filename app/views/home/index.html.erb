                <p><%= edit_text('testimonial_3', { en: 'Reliable, fair price and turned up on time.', fr: 'Fiable, prix juste et tourné sur le temps.'}) %></p>
                <footer><cite><strong><%= edit_text('testimonial_3_author', 'Elaine', p_tags: false) %></strong></cite></footer>
