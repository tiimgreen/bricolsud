            <hr class="c-divider m-transparent hidden-lg hidden-md">

          </div>
          <div class="col-md-4">

            <!-- FEATURE : begin -->
            <div class="c-feature">
              <i class="feature-icon fa fa-eur"></i>
              <h3 class="feature-title"><%= edit_text('focus_point_3_title', { en: 'Fair Prices', fr: 'Une tarification équitable' }) %></h3>
              <div class="feature-text">
                <p><%=
                  edit_text(
                    'focus_point_3_body',
                    { en: 'I provide fair prices for all clients which are agreed before any work commences.',
                      fr: 'Je fournis des prix équitables pour tous les clients qui sont convenus avant le début des travaux .'
                    }
                  )
                %></p>
              </div>
            </div>
            <!-- FEATURE : end -->

          </div>
        </div>

      </div>
    </div>
  </section>
