<div class="container settings-container">
  <%= form_for [@service, @question], html: { class: 'form-horizontal' } do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group">
      <%= f.label :question, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :question, auto_focus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :answer, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :answer, rows: 5, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Update', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
