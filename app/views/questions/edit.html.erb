<div class="container settings-container">
  <%= form_for [@service, @question], html: { class: 'form-horizontal' } do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group">
      <%= f.label :question_en, 'Question (English)', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :question_en, auto_focus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :answer_en, 'Answer (English)', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :answer_en, rows: 5, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :question_fr, 'Question (French)', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :question_fr, auto_focus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :answer_fr, 'Answer (French)', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :answer_fr, rows: 5, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Update', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
