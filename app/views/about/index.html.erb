<!-- PAGE TITLE : begin -->
<div id="page-title" class="m-parallax">

  <!-- PAGE TITLE TOP : begin -->
  <div class="page-title-top">
    <div class="page-title-top-inner">

      <!-- PAGE TITLE TEXT : begin -->
      <div class="page-title-text">
        <div class="container">
          <h1><%= edit_text('page_title', { en: 'About Us', fr: 'À propos de nous' }, p_tags: false) %></h1>
        </div>
      </div>
      <!-- PAGE TITLE TEXT : end -->

    </div>
  </div>
  <!-- PAGE TITLE TOP : end -->

  <!-- PAGE TITLE BOTTOM : begin -->
  <div class="page-title-bottom">
    <div class="container">
      <div class="page-title-bottom-inner">
        <div class="page-title-bottom-inner2">

          <!-- PAGE TITLE BREADCRUMBS : begin -->
          <div class="page-title-breadcrumbs">
            <ul>
              <li><%= link_to t('general.home'), root_path %></li>
              <li><%= read_text('page_title', { en: 'About Us', fr: 'À propos de nous' }) %></li>
            </ul>
          </div>
          <!-- PAGE TITLE BREADCRUMBS : end -->

        </div>
      </div>
    </div>
  </div>
  <!-- PAGE TITLE BOTTOM : end -->

</div>
<!-- PAGE TITLE : end -->

<div class="container">

  <!-- PAGE CONTENT : begin -->
  <div id="page-content">

    <h2><%= edit_text('page_header', { en: '__25 Years of Experience__ in Home Maintenance', fr: "__25 ans d'expérience__ dans Entretien de la maison" }, p_tags: false) %></h2>
    <%= edit_text('page_body') %>

    <hr class="c-divider m-size-small m-transparent">

  </div>
  <!-- PAGE CONTENT : end -->

</div>
